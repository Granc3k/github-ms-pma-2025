<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.HomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Co si přeješ k Vánocům?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editGift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Např. Nový mobil"
        android:inputType="textCapSentences"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Přidat do seznamu"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tvůj seznam:"
        android:layout_marginTop="24dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="#11000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/textGiftList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Zatím prázdno)"
            android:textSize="16sp"/>
    </ScrollView>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smazat vše"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>